<assembly xmlns="http://maven.apache.org/assembly/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<id>initialdb</id>
	<formats>
		<format>tar.bz2</format>	
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>distrib/derby</directory>
			<outputDirectory>derby</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>distrib/export</directory>
			<outputDirectory>export</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>distrib/sql/upgrade</directory>
			<outputDirectory>export/upgrade</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>distrib/sql</directory>
			<includes>
				<include>KEYS.sql</include>
				<include>INDEXES.sql</include>
				<include>DROP.sql</include>
			</includes>
			<outputDirectory>export</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>